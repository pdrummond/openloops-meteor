@import 'jeet'
@import 'nib'
@import 'variables.import'

*
 	font-family font-main

html
	overflow hidden
	padding 0
	margin 0
	height: 100%;
	width: 100%;

body
	overflow hidden
	padding 0
	margin 0
	height 100% !important
	width 100% !important

#app
	height 100%
	.left-sidebar
		height 100%
		top 0
		left 0
		bottom 0
		position fixed
		display block
		width sidebar-width
		color gray
		background-color white
		border-right: 1px solid lightgray;
		z-index:999

		#top-header
			width: 100%;
			height: 30px;
			display: flex;
			justify-content: space-between;

			#board-title {
				padding:5px;
				color: #4A4949;
    			font-weight: bold;
				font-size:1.2rem;
			}
			#create-link
				border:none;
				padding:5px 10px 5px 10px;
				background-color: #1E8F3C;
				color:white;

		#item-list > :first-child {
			border-top: 1px solid lightgray;
		}
		#item-list
			margin:0
			padding: 0
			list-style: none

			.item
				border-bottom: 1px solid lightgray;
				display: block
				padding:10px;
				padding-bottom:20px;
			.item:hover
				background-color:lightgray;

			#title
				font-size: 1.1em;
				color:black;
			#description
				font-size:0.9em;
				color:gray;
				overflow: ellipsis;
			a
				text-decoration: none;
	.main
		height 100%
		padding-left sidebar-width
		padding-bottom footer-height

#message-list {
	xbackground-color: gray;
    top: header-height;
    position: relative;
    height: "calc(100% - %s)" % (header-height + footer-height + 40);
	overflow: auto;
	border-top: 1px solid lightgray
	border-bottom: 1px solid lightgray;
	padding-left:10px;
}

#show-more-link {
	font-size: 0.7rem;
    margin-left: 10px;
}

.message
    padding 10px
    list-style-type none

	#meta
		color: lightgray;
		font-size: 0.8rem;

		a
			color: lightgray;

.message.new-day:before {
	content: attr(data-date);
	display: block;
	font-size: 12px;
	font-weight: 600;
	text-align: center;
	z-index: 10;
	padding: 10px;
	background-color: whitesmoke;
	xborder-top: 1px solid black;
	xborder-bottom: 1px solid black;
	border: 1px solid lightgray;
	margin-bottom: 30px;
	margin-top: 30px;
}

.message.new-day:after {
	border-top-color: #ddd;
}

.message.selected
    background-color orange


header
	position fixed
	left 0
	top 0
	width 100%
	height header-height
	background-color white
	margin-left: sidebar-width

footer
	position fixed
	left 0
	bottom 0
	width 100%
	height footer-height
	background-color white
	margin-left: sidebar-width

#login-buttons
  z-index:2;
  position:absolute;
  top:10px;
  right:10px;

#login-buttons #login-dropdown-list {
	left:auto;
	top:5px;
	right:10px;
}


fieldset, input, textarea
	margin 0
	padding 0
	border 0
	font-size 100%
	vertical-align baseline
	resize none
	margin-bottom 30px
	outline none

textarea
	min-height 70px

form
	padding 30px
	width 60%
	margin-bottom:10px

input, textarea
	border 1px solid lightgray
	border-radius 4px
	padding 5px
	width 100%

label
	display block

footer
	padding 10px

#message-box
	width calc(100% - 340px)

#header-main-title
	padding:10px
	font-size 2rem
	margin-left 10px

#header-new-messages-toast
	margin-left: 10px;
	background-color: #FF5B5B;
	padding: 5px 10px 5px 10px;
	color: white;
	border-radius: 10px;
	font-size: 1rem;
	text-decoration: none;

#header-title-msg-count
	color: gray

#loading-more
	margin-left:10px

#loading-more-icon
	color:gray;
	position:relative;
	top:5px;

.hide
	display:none

.team-feed-banner
	xdisplay:flex;
	display:none;
	xjustify-content: space-around;
	background-color:black;
	color:whitesmoke;
	padding-top:10px;

	.feed-box
		width:150px;
		height:80px;
		xborder: 1px solid white;
		padding-top:10px;
		xmargin-right:10px;

	.feed-box a
		color:white;


	.feed-box .title
		padding:5px;
		font-size: 1.0rem;
		text-align:center;
		text-transform: uppercase;

	.feed-box .stat
		text-align:center
		font-size: 2rem;
		padding:0;
		margin:0;

.item-message {
	border: 1px solid lightgray;
	margin-top:10px;
	margin-bottom:10px;
	margin-right: 10px;

	#type-icon {
 		color:#38A6BF;
	}

	#item-desc {
		margin-top:5px;
		color:gray;
	}
}

a
	text-decoration:none;
	color: black;
