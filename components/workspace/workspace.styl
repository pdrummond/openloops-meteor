.workspace-container {
  display:flex;
  flex-wrap:wrap;
  align-content: flex-start;
  position: fixed;
  top: 75px;
  left: 400px;
  right:400px;

  overflow-x:auto;
  overflow-y:auto;
  background:#B04632;
  height: calc(100% - 75px);
}

.workspace-header .filter-label {
  color:white;
  font-weight:bold;
  text-transform:uppercase;
  font-size:12px;
}

